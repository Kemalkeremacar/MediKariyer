{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/features/*": ["src/features/*"],
      "@/api/*": ["src/api/*"],
      "@/store/*": ["src/store/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"],
      "@/theme/*": ["src/theme/*"],
      "@/types/*": ["src/types/*"],
      "@/config/*": ["src/config/*"],
      "@/navigation/*": ["src/navigation/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/ui": ["src/ui.tsx"],
      "@/layouts": ["src/layouts.tsx"],
      "@/animations": ["src/animations.tsx"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "metro.config.js",
    "babel.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
